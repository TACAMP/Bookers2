<h1>User info</h1>
<%= form_with model:@user do |f| %>
<label for="InputName">Name</label>
<%= f.text_field:name,id:"inputname",placeholder:"name" %>
<label for="InputImage">Image</label>
<%=f.file_field:image,placeholder:"ファイルを選択",accept:"image/*" %>
<label for="InputIntroduction">Introduction</label>
<%=f.text_area:introduction,placeholder:"Introduction" %>
<%=f.submit"Update Users" %>
<% end %>