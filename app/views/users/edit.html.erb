<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>

<% if @user.errors.any? %>
<%= @user.errors.count %>error prohibited this obj from being saved:
<ul>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message  %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model:@user do |f| %>
<div class="form-group">
<label for="InputName">Name</label>
<%= f.text_field:name,id:"inputname",placeholder:"name" , class:"form-group form-control" %>
</div>
<label for="InputImage">Image</label><br>
<%=f.file_field:profile_image,placeholder:"ファイルを選択",accept:"image/*"  %>
<div class="form-group">
<label for="InputIntroduction">Introduction</label>
<%=f.text_area:introduction,placeholder:"Introduction" , class:"form-group form-control"  %>
<div class="form-group">
<%=f.submit"Update Users" , class:"form-group btn btn-secondary" %>
</div>
<% end %>