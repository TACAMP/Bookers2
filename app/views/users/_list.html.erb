<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
<tr>
<th>Name</th>
<th><%= @user.name %></th>
</tr>
<tr>
<th>Introduction</th>
<th><%= @user.introduction %></th>
</tr>
</tbody>
</table>
  <div class="row">
  <a class="btn btn-outline-secondary btn-block" href="/users/:id/edit">
    <i class="fas fa-user-cog"></i>
  </a>
  </div>


<h2 class="mt-3">New Book</h2>
  <%= form_with model: @book do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field:title , class:"form-group form-control" %>
  </div>
  <div class="form-group">
    <label for="book_body">Opinion</label>
    <%= f.text_area:body , class:"form-group form-control" %>
  </div>
  <div class="form-group">
    <%=f.submit'Create Book' , class:"form-group btn btn-success" %>
  </div>
  <% end %>
</form>

