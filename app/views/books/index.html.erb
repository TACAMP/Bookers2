<h1>User info</h1>
<%= image_tag @user.get_image(100,100) %>
<h4>Name<%= @user.name %></h4>
<h4>Introduction<%= @user.introduction %></h4>
<p><%= link_to'プロフィール編集',edit_user_path(@user) %></p>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field:title %>
<h4>Opinion</h4>
<%= f.text_area:opinion %>
<%=f.submit'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<%= link_to book_path(@user) do %>
<%= image_tag book.user.get_image(100,100) %>
<% end %>
<p><%= link_to book.title %></P>
<p><%= book.introduction %></p>
<% end %>