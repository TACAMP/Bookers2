<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
  <%=render'list',book:@book,user:@user %>
  </div>
<div class="col-md-8 offset-md-1">
  <h2>Books detail</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <tr>
<td>
<%= link_to book_path do %>
<%= image_tag @user.get_profile_image(100,100) %>
<% end %>
<%= link_to @user.name %>
</td>
<td><%= link_to @books.title %></td>
<td><%= @books.body %></td>
<% if @books.user==current_user %>
<div class="form-group">
<td><%= link_to'Edit',edit_book_path , class:"form-group btn btn-success" %>
</div></td>
<div class="form-group">
<td><%= link_to'Destroy',book_path,method: :delete,"data-confirm"=>"本当に消しますか？" , class:"form-group btn btn-danger" %></td>
</div>
<% end %>
</tr>
</tbody>
</table>


